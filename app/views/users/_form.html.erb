
<div class="container">
  <div class="row">
    <div class="span4 offset4 info_box admin" style="margin-top: 3em;">
      <div class="underline">

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
