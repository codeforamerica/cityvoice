											<div class="voiceAnnotate">
												<div style="display: inline; margin-bottom: .75em; padding-right: 1em;">
									      </div>
												<strong><%= @choice %></strong>&nbsp;&nbsp;
											  date: <strong><%= message.created_at.to_date %></strong> &nbsp; 
