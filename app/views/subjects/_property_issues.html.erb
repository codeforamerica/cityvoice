<% @numerical_responses.each do |single_numerical| %>
  <div class="question">
    <div class="row-fluid">
      <div class="span12">
        <div class="text">
          <%= single_numerical.question_text %>
        </div>

        <% single_numerical.response_hash.each_pair do |choice, count_of_choice| %>

            <div class="span2">
              <% if choice == "Repair" %>
                <img src="/assets/Repair.png" />
              <% elsif choice == "Remove" %>
                <img src="/assets/Demo.png" />
              <% end %>
            </div>
            <div class="span9">
            <div class="progress progress-info" style="margin-top: .5em; margin-bottom: 1em;">
              <div class="bar" style="width: <%= count_of_choice*10 %>%">
                <h3><%= count_of_choice %>&nbsp;&nbsp;<%= choice %></h3>
              </div>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
<% end %>
